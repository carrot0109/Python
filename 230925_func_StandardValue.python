def profile(name, age, main_lang):
    print("이름 : {0}\t나이 : {1}\t주 사용 언어 : {2}".format(name, age,main_lang)) 
    
profile("유재석", 20, "파이썬")
profile("김태호",25,"자바")

# 같은 학교 같은 학년 같은 반 같은 수업이라 가정
def profile(name, age = 17, main_lang = "파이썬"):          # 미리 기본값을 설정
    print("이름 : {0}\t나이 : {1}\t주 사용 언어 : {2}".format(name, age,main_lang)) 
    
profile("유재석",)       # 나이와 주 언어는 기본값이 설정돼있으므로 따로 입력하지 않아도 됨
profile("김태호")
